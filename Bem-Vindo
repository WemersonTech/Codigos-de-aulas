#include <stdio.h>
#include <string.h>
#include <locale.h>

int main() {
	
	setlocale(LC_ALL, "portugese");
	
    char s1[100];
    char s2[50];
    char s3[100];

    
    printf("Digite seu nome completo: ");
    fgets(s1, sizeof(s1), stdin);

   
    s1[strcspn(s1, "\n")] = 0;

   
    sscanf(s1, "%s", s2);


    snprintf(s3, sizeof(s3), "\nBem-vindo, %s!", s2);

   
    printf("%s\n", s3);

    return 0;
}
